<%- include('../partials/head') %>
</head>
<body class="bg-gray-100 text-gray-800">

  <!-- Navigation -->
 <%- include('../partials/nav')%>
  <!-- Header -->
  <header class="bg-white shadow-md py-8">
    <div class="container mx-auto text-center">
      <h1 class="text-3xl font-bold mb-2"><%=editing ?"Edit" :" Register"%> Your Home Here</h1>
    </div>
  </header>

  <!-- Main Content -->
  <main class="container mx-auto my-8 p-6 bg-white shadow-md rounded-lg">
    <form action="/host/<%=editing?"edit-home":"add-home"%>" method="post" class="space-y-4">
      <div>
        <input 
        type="hidden" name="id"
        value="<%=editing?home.id:""%>">
        <label for="houseName" class="block text-lg font-medium"></label>
        <input 
          type="text" 
          value="<%=editing?home.houseName:""%>"
          id="houseName" 
          name="houseName" 
          placeholder="Enter the name of your house"
          class="w-full border border-gray-300 rounded-md p-3 focus:outline-none focus:ring-2 focus:ring-blue-500"
        >
        <input 
          type="text" 
          value="<%=editing?home.price:""%>"
          id="price" 
          name="price" 
          placeholder="Price Per night"
          class="w-full border border-gray-300 rounded-md p-3 focus:outline-none focus:ring-2 focus:ring-blue-500"
        >
        <input 
          type="text" 
          value="<%=editing?home.location:""%>"
          id="location" 
          name="location" 
          placeholder="Location"
          class="w-full border border-gray-300 rounded-md p-3 focus:outline-none focus:ring-2 focus:ring-blue-500"
        >
        <input 
          type="text" 
          value="<%=editing?home.rating:""%>"
          id="rating" 
          name="rating" 
          placeholder="Ratings"
          class="w-full border border-gray-300 rounded-md p-3 focus:outline-none focus:ring-2 focus:ring-blue-500"
        >
        <input 
        type="text" 
        value="<%=editing?home.photoUrl:""%>"
        id="photoUrl" 
        name="photoUrl" 
        placeholder="Enter Photo Url"
        class="w-full border border-gray-300 rounded-md p-3 focus:outline-none focus:ring-2 focus:ring-blue-500"
      >
      </div>
      <div>
        <input
          type="submit" value="<%= editing?"Update Home":"Add Home"%>"
          class="bg-blue-500 text-white font-bold py-2 px-6 rounded-md hover:bg-blue-600"
        >
         
      </div>
    </form>
  </main>

</body>
</html>
